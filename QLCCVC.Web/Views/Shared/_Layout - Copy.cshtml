<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link href="~/Statics/theme/font-awesome/font-awesome.css" rel="stylesheet" />

    <!--P Notify-->
    <link href="~/Statics/vendors/pnotify/src/pnotify.css" rel="stylesheet" />
    <link href="~/Statics/vendors/pnotify/src/pnotify.brighttheme.css" rel="stylesheet" />
    <link href="~/Statics/vendors/pnotify/src/pnotify.nonblock.css" rel="stylesheet" />
    @*<link href="~/Statics/vendors/pnotify/src/pnotify.material.css" rel="stylesheet" />*@
    <link href="~/Statics/vendors/pnotify/src/pnotify.buttons.css" rel="stylesheet" />
    <link href="~/Statics/theme/css/custom.css" rel="stylesheet" />

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" >
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content" ng-app="cmsAngular">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
   
    <!--P Notify-->
    <script src="~/Statics/vendors/pnotify/src/pnotify.js"></script>
    <script src="~/Statics/vendors/pnotify/src/pnotify.desktop.js"></script>

    <!--Common-->
    <script src="~/Statics/app/plugins/angular/angular.js"></script>
    <script src="~/Statics/app/app.js"></script>
    @*<script src="~/Statics/app/notificationService.js"></script>*@

    @RenderSection("PageScript", required: false)
</body>
</html>
