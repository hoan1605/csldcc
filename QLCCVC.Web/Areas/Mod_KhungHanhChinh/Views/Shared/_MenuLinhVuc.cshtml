
@model List<QLCCVC.DAL.DomainModels.LinhVucModel>


@if (Model != null)
{
    <div class="sidebar-widgets qlcc_menu">
        <p class="menu-title widget-title" style="font-size: 13px;font-weight: 600;"> 
            Lĩnh vực
        </p>
        <ul class="folders qlcc_list">
            <li>
                <label class="neo-check neo-radio">
                    <input type="radio" name="filterLinhVuc" checked="checked" value="">
                    <span class="icon"><i class="fa fa-check"></i></span>
                    Tất cả
                </label>
            </li>
            @foreach (var item in Model)
            {
                <li>
                    <label class="neo-check neo-radio">
                        <input type="radio" name="filterLinhVuc" value="@(item.DM_linhVuc_ID)">
                        <span class="icon"><i class="fa fa-check"></i></span>
                        @(item.noiDung)
                    </label>
                </li>
            }
        </ul>
    </div>
}
